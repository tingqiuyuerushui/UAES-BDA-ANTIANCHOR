<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/title_headers"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_header"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/defalut_lr_padding"
            android:paddingRight="15dip"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="10dip"
                android:layout_height="20dip"
                android:src="@mipmap/black_left_arrow"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_18s"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="@dimen/text_18"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            android:paddingRight="@dimen/defalut_lr_padding"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:background="@mipmap/user_icon"
                android:scaleType="centerInside"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>