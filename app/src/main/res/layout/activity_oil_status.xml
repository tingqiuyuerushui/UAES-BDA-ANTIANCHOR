<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/img_fuel_helper_background"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            android:paddingTop="10dp"
            android:text="机油健康度"/>
        <uaes.bda.antianchor.demo.customsizeview.DashboardView4
            android:id="@+id/dashboard_oil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-50dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_engineer_oil_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_engine_oil_health"/>
            <TextView
                android:id="@+id/tv_oil_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16"
                android:padding="5dp"
                android:text="机油健康"/>
            <TextView
                android:id="@+id/tv_normal_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16"
                android:padding="5dp"
                android:text="剩余可行驶里程"/>
            <TextView
                android:id="@+id/tv_oil_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16"
                android:padding="5dp"
                android:text="3000km"/>
            <TextView
                android:id="@+id/tv_change_oil"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:drawableRight="@mipmap/ico_go_arrow_right"
                android:background="@drawable/tv_change_oil_shape"
                android:text="北汽4S"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>