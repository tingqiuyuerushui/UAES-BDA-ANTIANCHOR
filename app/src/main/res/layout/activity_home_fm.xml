<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/img_home_background"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <uaes.bda.antianchor.demo.customsizeview.DashboardViewHome
            android:id="@+id/dashboard_oil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dashboard_oil"
            android:layout_alignEnd="@+id/dashboard_oil"
            android:layout_marginBottom="64dp"
            android:layout_marginEnd="104dp"
            android:src="@mipmap/img_home_dashboard_fuel"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-30dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:text="剩余里程数:"/>
        <TextView
            android:id="@+id/tv_remaining_mileage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24"
            android:text="150km"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_battery_status"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/text_tips_shape"
        android:gravity="center">
        <ImageView
            android:id="@+id/img_home_battery_status"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/current_battery_status"/>
        <TextView
            android:id="@+id/tv_home_battery_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电量充足"
            android:textSize="@dimen/text_16"
            android:textColor="@color/white"
            android:padding="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_car_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:orientation="vertical"
            android:background="@drawable/text_tips_shape"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16"
                android:text="车辆健康状态"
                />
            <TextView
                android:id="@+id/tv_home_health_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="良好"
                android:textSize="@dimen/text_16"
                android:textColor="@color/white"
                android:padding="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_maintenance_factor"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:orientation="vertical"
            android:background="@drawable/text_tips_shape"
            android:layout_marginLeft="20dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16"
                android:text="车辆保养系数"
                />
            <TextView
                android:id="@+id/tv_home_maintenance_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80"
                android:textSize="@dimen/text_16"
                android:textColor="@color/white"
                android:padding="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>