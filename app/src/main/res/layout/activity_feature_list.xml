<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">
    <include layout="@layout/layout_title"/>
    <View style="@style/style_horizontal_line"
          android:layout_marginTop="10dip"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_do_note_money"
            style="@style/style_home_text"
            android:drawableTop="@mipmap/img_balance_money"
            android:text="记账"
            tools:ignore="UnusedIds" />

        <View style="@style/style_vertical_line" />

        <TextView
            android:id="@+id/tv_fuel_helper"
            style="@style/style_home_text"
            android:drawableTop="@mipmap/img_fuel_helper"
            android:text="油管家"
            tools:ignore="UnusedIds" />

        <View style="@style/style_vertical_line" />

        <TextView
            android:id="@+id/tv_setting"
            style="@style/style_home_text"
            android:drawableTop="@mipmap/img_fuel_station"
            android:text="加油站"
            tools:ignore="UnusedIds" />
    </LinearLayout>
    <View style="@style/style_horizontal_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/style_home_text"
            android:id="@+id/tv_battery_helper"
            android:drawableTop="@mipmap/img_battery_helper_yellow"
            android:text="电池小助手" />
        <View style="@style/style_vertical_line" />
        <TextView
            style="@style/style_home_text"
            android:id="@+id/tv_sparking"
            android:drawableTop="@mipmap/img_sparking_with_color"
            android:text="火花塞" />
        <View style="@style/style_vertical_line" />
        <TextView
            style="@style/style_home_text"
            android:id="@+id/tv_engine_oil"
            android:drawableTop="@mipmap/img_engine_oil_with_color"
            android:text="机油" />

        <View style="@style/style_vertical_line" />

    </LinearLayout>

    <View style="@style/style_horizontal_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/style_home_text"
            android:id="@+id/tv_weather"
            android:drawableTop="@mipmap/img_home_weather"
            android:text="天气" />
        <View style="@style/style_vertical_line" />

        <TextView
            style="@style/style_home_text02"
            android:id="@+id/tv_driving_track"
            android:drawableTop="@mipmap/travelingtrace"
            android:text="驾驶轨迹" />
        <View style="@style/style_vertical_line" />

        <TextView
            style="@style/style_home_text"
            android:id="@+id/tv_more"
            android:drawableTop="@mipmap/img_setting"
            android:text="敬请期待" />

        <View style="@style/style_vertical_line" />



    </LinearLayout>

    <View style="@style/style_horizontal_line" />
</LinearLayout>