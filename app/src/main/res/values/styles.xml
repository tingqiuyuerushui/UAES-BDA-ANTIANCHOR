<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- PopupWindow弹出/隐藏动画 12-28 -->
    <style name="MyPopupWindow_anim_style">
        <!--进入时的动画，代码如下-->
        <item name="android:windowEnterAnimation">@anim/popupwindow_show_anim</item>
    <!--推出时的动画，代码如下：-->
        <item name="android:windowExitAnimation">@anim/popupwindow_hidden_anim</item>
    </style>


    <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="style_home_text">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_hui_6</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:layout_width">0.7dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">10dip</item>
    </style>

    <style name="style_home_text02">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_hui_6</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:layout_width">0.7dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">5dip</item>
    </style>

    <style name="style_vertical_line">
        <item name="android:background">@color/main_line_1</item>
        <item name="android:layout_width">0.7dip</item>
        <item name="android:layout_height">120dip</item>
    </style>
    <style name="style_horizontal_line">
        <item name="android:background">@color/main_line_1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.7dip</item>
    </style>

    <style name="style_linearlayout_regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="style_textview_regular">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="style_textview_change">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="style_textview_history_change">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dip</item>
    </style>
    <style name="style_donote_linearlayout_regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="style_donote_textview_regular">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@mipmap/come_on_helper_button_background</item>
    </style>
    <style name="style_donote_editview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:background">@mipmap/come_on_helper_button_background</item>
    </style>
    <style name="style_donote_img_vertical_line">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#fff</item>
    </style>
    <style name="style_donote_img_level_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="donote_linear_width_match_style">
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="donote_linear_with_weight_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="donote_img_with_wrap_height_wrap_style">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="donote_linear_inner_width_match">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="donote_tv_width_wrap_height_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="donote_et_width_value_style">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColorHint">@color/color_yinhui</item>
        <item name="android:background">@null</item>
    </style>

    <style name="line_weather_horizontal_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="linear_weather_graid_style">
        <item name="android:layout_width">0.7dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tv_weather_graid_top_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_hui_c4</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="tv_weather_graid_bottom_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>
    <style name="line_weather_vertical_style">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">0.7dip</item>
        <item name="android:layout_height">120dip</item>
    </style>

    <style name="linear_weather_height_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="tv_weather_head_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
